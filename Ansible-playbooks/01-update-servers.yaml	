
- hosts: all
  remote_user: root
  become: yes
  become_user: root
  become_method: sudo
  gather_facts: yes

  vars:
    ansible_become_pass: " "

  tasks:
    - name: "Update Repository cache"
      apt:
        update_cache: true
        cache_valid_time: 3600
        force_apt_get: true
      check_mode: no                                                                                                                                         